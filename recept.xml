    <r:Recipe>
        <r:Title>Spaghetti Carbonara</r:Title>
        <r:Ingredients>
            <r:Ingredient>
                <r:Name>spaghetti</r:Name>
                <r:Quantity>200</r:Quantity>
                <r:Unit>g</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>egg yolk</r:Name>
                <r:Quantity>4</r:Quantity>
                <r:Unit>pcs</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>pancetta</r:Name>
                <r:Quantity>100</r:Quantity>
                <r:Unit>g</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>parmesan</r:Name>
                <r:Quantity>50</r:Quantity>
                <r:Unit>g</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>black pepper</r:Name>
                <r:Quantity>1</r:Quantity>
                <r:Unit>g</r:Unit>
            </r:Ingredient>
        </r:Ingredients>
        <r:Instructions>
            Boil the spaghetti. In a separate pan, fry the pancetta. Mix egg yolks with parmesan. Combine everything and season with black pepper.
        </r:Instructions>
        <r:PreparationTime>10</r:PreparationTime>
        <r:CookingTime>15</r:CookingTime>
        <r:ServingSize>2</r:ServingSize>
        <r:Category>Main Course</r:Category>
        <r:Difficulty>Medium</r:Difficulty>
        <r:Nutrition calories="700" fat="35g" protein="25g" carbs="70g"/>
        <r:Image>carbonara.jpg</r:Image>
    </r:Recipe>

