    <r:Recipe>
        <r:Title>Avocado Toast</r:Title>
        <r:Ingredients>
            <r:Ingredient>
                <r:Name>bread slice</r:Name>
                <r:Quantity>2</r:Quantity>
                <r:Unit>pcs</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>avocado</r:Name>
                <r:Quantity>1</r:Quantity>
                <r:Unit>pcs</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>lemon juice</r:Name>
                <r:Quantity>10</r:Quantity>
                <r:Unit>ml</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>salt</r:Name>
                <r:Quantity>1</r:Quantity>
                <r:Unit>g</r:Unit>
            </r:Ingredient>
            <r:Ingredient>
                <r:Name>black pepper</r:Name>
                <r:Quantity>1</r:Quantity>
                <r:Unit>g</r:Unit>
            </r:Ingredient>
        </r:Ingredients>
        <r:Instructions>
            Mash avocado with lemon juice, salt, and pepper. Spread on toasted bread.
        </r:Instructions>
